# Supabase (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_KEY}

# LLM Services (Required - choose one or both)
OPENROUTER_API_KEY=your-openrouter-key
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_API_KEY=your-openai-key

# Firecrawl (Required for signal discovery)
FIRECRAWL_API_KEY=your-firecrawl-key

# Gmail API (Required for outreach)
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REFRESH_TOKEN=your-refresh-token
GMAIL_FROM_EMAIL=your-email@domain.com
GMAIL_FROM_NAME=Your Name

# Calendly (Required for meeting booking)
CALENDLY_LINK=https://calendly.com/your-link/15min

# N8N Orchestration (Optional)
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your-n8n-api-key
N8N_NEXT_API_BASE_URL=http://host.docker.internal:3000

# Enrichment Services (Waterfall strategy - at least one recommended)
# Apollo.io (Primary contact/company enrichment)
APOLLO_API_KEY=your-apollo-key

# Clearbit (Company enrichment with tech stack)
CLEARBIT_API_KEY=your-clearbit-key

# Hunter.io (Email verification and discovery)
HUNTER_API_KEY=your-hunter-key

# PhantomBuster (LinkedIn scraping)
PHANTOMBUSTER_API_KEY=your-phantombuster-key

# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_CHANNEL_APPROVALS=#approvals
SLACK_CHANNEL_ALERTS=#alerts

# Browserbase (Optional - for evidence collection)
BROWSERBASE_API_KEY=your-browserbase-key

# Temporal Workflow Engine (Optional - alternative to n8n)
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
