# Redis Configuration (for Social <-> Exploit coordination)
REDIS_URL=redis://localhost:6379

# Anthropic API (for Computer Use Agent)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Directory Configuration
WORKFLOWS_DIR=./workflows
ARTIFACTS_DIR=./tmp/artifacts
SCREENSHOTS_DIR=./tmp/screenshots

# Execution Settings
MAX_EXECUTION_TIME=90000  # 90 seconds target
ENABLE_EXPLORER=true      # Run Explorer on first capture
ENABLE_SCORING=true       # Compute Agent Score

# AWS S3 Configuration (for artifact bundles)
AWS_REGION=us-east-1
AWS_S3_BUCKET=arcanared-exploit-bundles
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# Optional: Policy Engine Webhook
POLICY_ENGINE_WEBHOOK_URL=https://your-policy-engine.com/webhook
