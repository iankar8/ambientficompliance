{
  "name": "arcanared",
  "version": "0.2.0",
  "private": true,
  "description": "AI Adversarial Testing Platform - Consolidated Edition",
  "workspaces": {
    "packages": [
      "packages/arcanared-core",
      "packages/demo-bank",
      "packages/explorer-service",
      "packages/parlant-bridge/typescript",
      "packages/shared",
      "packages/tool-executor-playwright",
      "packages/video-intelligence"
    ]
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "lint": "echo 'Linting placeholder'",
    "discovery:run": "npm run build && node packages/arcanared-core/dist/arcanared-core/src/cli/discovery.js",
    "demo-bank": "cd packages/demo-bank && npm start",
    "parlant:services": "cd packages/parlant-bridge && docker-compose up",
    "parlant:bridge": "cd packages/parlant-bridge/typescript && npm start",
    "parlant:python": "cd packages/parlant-bridge/python && python server.py"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ejs": "^3.1.10"
  }
}
